<!--There must also be an Admin view for a site administrator. This page must:
//Show all quotes issued, along with the user's first name, last name, and email address.-->
@using AutoInsuranceQuote.Models
@model List<Customer>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h2 class="m-0">Admin Quotes</h2>
        </div>
        <div class="card-body">
            @foreach (var customer in Model)
            {
                using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                {
                    <input type="hidden" name="Id" value="@customer.Id" />
                    <div class="row mb-3">
                        <div class="col">
                            @customer.FirstName
                        </div>
                        <div class="col">
                            @customer.LastName
                        </div>
                        <div class="col">
                            @customer.EmailAddress
                        </div>
                        <div class="col">
                            @customer.Quote
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>